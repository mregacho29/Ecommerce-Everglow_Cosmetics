<div class="container mt-5">
  <h1 class="mb-4 text-center">Edit Shipping Information</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_with model: @address, url: address_path, method: :patch, local: true, class: "needs-validation" do |f| %>
        <div class="mb-4">
          <%= f.label :street, "Street Address", class: "form-label" %>
          <%= f.text_field :street, class: "form-control", placeholder: "123 Main St" %>
        </div>

        <div class="mb-4">
          <%= f.label :city, "City", class: "form-label" %>
          <%= f.text_field :city, class: "form-control", placeholder: "Enter your city" %>
        </div>

        <div class="mb-4">
          <%= f.label :province, "Province", class: "form-label" %>
          <%= f.text_field :province, class: "form-control", placeholder: "Enter your province" %>
        </div>

        <div class="mb-4">
          <%= f.label :postal_code, "Postal Code", class: "form-label" %>
          <%= f.text_field :postal_code, class: "form-control", placeholder: "e.g., A1A 1A1" %>
        </div>

        <div class="mb-4">
          <%= f.label :country, "Country", class: "form-label" %>
          <%= f.text_field :country, class: "form-control", placeholder: "Enter your country" %>
        </div>

        <div class="d-grid mt-4 mb-5">
          <%= f.submit "Update Shipping Information", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>