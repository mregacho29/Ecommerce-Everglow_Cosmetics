<div class="container mt-5">
  <h1 class="mb-4 text-center">Add Shipping Information</h1>
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= form_with url: save_shipping_carts_path,
                    method: :post,
                    local: true,
                    scope: :shipping_info do |f| %>

        <div class="mb-4">
          <%= f.label :name, "Full Name", class: "form-label" %>
          <%= f.text_field :name,
                           value: @shipping_info[:name],
                           class: "form-control",
                           placeholder: "Enter your full name",
                           required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :street, "Street Address", class: "form-label" %>
          <%= f.text_field :street,
                           value: @shipping_info[:street],
                           class: "form-control",
                           placeholder: "123 Main St",
                           required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :city, "City", class: "form-label" %>
          <%= f.text_field :city,
                           value: @shipping_info[:city],
                           class: "form-control",
                           placeholder: "Enter your city",
                           required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :province, "Province", class: "form-label" %>
          <%= f.text_field :province,
                           value: @shipping_info[:province],
                           class: "form-control",
                           placeholder: "Enter your province",
                           required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :postal_code, "Postal Code", class: "form-label" %>
          <%= f.text_field :postal_code,
                           value: @shipping_info[:postal_code],
                           class: "form-control",
                           placeholder: "e.g., A1A 1A1",
                           required: true %>
        </div>

        <div class="mb-4">
          <%= f.label :country, "Country", class: "form-label" %>
          <%= f.text_field :country,
                           value: @shipping_info[:country],
                           class: "form-control",
                           placeholder: "Enter your country",
                           required: true %>
        </div>

        <div class="d-grid mt-4">
          <%= f.submit "Save Shipping Information",
                       class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
