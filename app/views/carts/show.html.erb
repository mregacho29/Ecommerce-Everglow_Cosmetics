<div class="container my-4">
  <h1 class="mb-4">Your Shopping Cart</h1>

  <% if @cart.present? %>
    <div class="table-responsive">
      <table class="table table-striped table-borderless">
        <thead class="thead-light">
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.each do |product_id, quantity| %>
            <% product = Product.find(product_id) %>
            <tr>
              <!-- Product Name -->
              <td><%= product.name %></td>

              <!-- Product Price -->
              <td><%= number_to_currency(product.price) %></td>

              <!-- Quantity -->
              <td>
                <%= form_with url: cart_add_path, method: :post, local: true, class: "d-inline" do |f| %>
                  <%= f.hidden_field :product_id, value: product.id %>
                  <%= f.number_field :quantity, value: quantity, min: 1, class: "form-control form-control-sm d-inline w-50" %>
                <% end %>
              </td>

              <!-- Remove Button -->
              <td>
                <%= button_to "X", remove_from_cart_path(product_id: product_id), method: :delete, class: "btn btn-danger btn-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex gap-2 mt-4">
      <%= link_to "Continue Shopping", products_path, class: "btn btn-secondary" %>

      <% if user_signed_in? %>
        <% if current_user.address.present? %>
          <%= link_to "Proceed to Checkout", checkout_carts_path, method: :post, class: "btn btn-primary" %>
        <% else %>
          <%= link_to "Add Shipping Information", new_address_path, class: "btn btn-warning" %>
        <% end %>
        <% else %> <!-- non-authenticated branch -->
          <% if session[:shipping_info].present? %>
            <%= link_to "Proceed to Checkout", checkout_carts_path, method: :post, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Proceed to Shipping", shipping_carts_path, class: "btn btn-primary" %>
          <% end %>
        <% end %>
    </div>
  <% else %>
    <div class="alert alert-warning" role="alert">
      Your cart is empty.
    </div>
    <%= link_to "Start Shopping", products_path, class: "btn btn-primary" %>
  <% end %>
</div>